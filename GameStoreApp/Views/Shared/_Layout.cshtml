@using Microsoft.AspNetCore.Http;
@using Application.Helpers;
@using Application.ViewModels;
@inject IHttpContextAccessor httpContext;
@{
    UserViewModel user = httpContext.HttpContext.Session.Get<UserViewModel>("user");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameStoreApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" asp-area="" asp-controller="@(user != null ? "Home" : "User")" asp-action="Index">GameStoreApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (user != null) //Si es un usuario logueado mostrará estás opciones, de lo contrario no lo hara.
                        {
                            if (user.Id == 4)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Product" asp-action="Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Category" asp-action="Index">Categorías</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="User" asp-action="SeeAllUsers">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="Product" asp-action="ProductDetails">Carrito de compras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="User" asp-action="LogOut">Cerrar sesión</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-bold" asp-controller="User" asp-action="LogOut">Cerrar sesión</a>
                                </li>
                            }

                        }
                        else
                        {
                            <li class="nav-item">
                                @*De no estar logueado solo mostraá la opción de Registrarse*@
                                <a class="nav-link text-white fw-bold" asp-controller="User" asp-action="Register">Registrate!</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - GameStoreApp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>