@using Application.ViewModels;
@{
    ViewData["Title"] = "";
}

<div class="container-fluid">
        <div class="col-12">
            <div class="row">
                <div class="col-sm">
                    <div class="card shadow-sm">

                        <img class="card-img-top img-product-size" src="/Images/carrito de compras.jpg" alt="Product image"/>

                        <div class="card-body">
                            <h4>Productos</h4>
                            <p class="card-text desc"></p>
                            <div class="d-flex gap-4">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Ver Productos</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="card shadow-sm">

                        <img class="card-img-top img-product-size" src="/Images/categorias.png" alt="Category image"/>

                        <div class="card-body">
                            <h4>Categorías</h4>
                            <p class="card-text desc"></p>
                            <div class="d-flex gap-4">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Ver Categorías</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="card shadow-sm">

                        <img class="card-img-top img-product-size" src="/Images/clientes.png" alt="Client image"/>

                        <div class="card-body">
                            <h4>Clientes</h4>
                            <p class="card-text desc"></p>
                            <div class="d-flex gap-4">
                                <a asp-controller="User" asp-action="SeeAllUsers" class="btn btn-primary">Ver Clientes</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm">
                    <div class="card shadow-sm">

                        <img class="card-img-top img-product-size" src="/Images/ventas.png" alt="Sales image"/>

                        <div class="card-body">
                            <h4>Ventas</h4>
                            <p class="card-text desc"></p>
                            <div class="d-flex gap-4">
                                <a href="#" class="btn btn-primary">Ver Ganancias</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
