@using Application.ViewModels;
@{
    ViewData["Title"] = "";
}
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5 ">
        <div class="px-5 row game-types-boxes">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top img-product-size" src="/Images/carrito de compras.jpg" alt="Product image" />

                        <div class="card-body p-4">
                            <div class="text-center">
                                <br />
                                <br />
                                <br />
                                <br />
                                <h4>Productos</h4>
                                <p class="card-text desc"></p>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark mt-auto">Ver Productos</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col mb-5">
                    <div class="card h-100">

                        <img class="card-img-top" src="/Images/categorias.png" alt="Category image" />

                        <div class="card-body p-4">
                            <div class="text-center">
                                <h4>Categorías</h4>
                                <p class="card-text desc"></p>
                                <div  class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark mt-auto">Ver Categorías</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col mb-5">
                    <div class="card h-100">

                        <img class="card-img-top img-product-size" src="/Images/clientes.png" alt="Client image" />

                        <div class="card-body p-4">
                            <div class="text-center">
                                <h4>Clientes</h4>
                                <p class="card-text desc"></p>
                                <div  class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <a asp-controller="User" asp-action="SeeAllUsers" class="btn btn-outline-dark mt-auto">Ver Clientes</a>
                                </div>
                                </div>
                            </div>
                        </div>
                </div>

                <div class="col mb-5">
                    <div class="card h-100">

                        <img class="card-img-top img-product-size" src="/Images/ventas.png" alt="Sales image" />

                        <div class="card-body p-4">
                            <div class="text-center">
                                <h4>Ventas</h4>
                                <p class="card-text desc"></p>
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <a class="btn btn-outline-dark mt-auto">Ver Ganancias</a>
                                </div>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</section>